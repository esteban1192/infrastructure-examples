pipeline {
    agent any
    environment {
        DEPLOYMENTS_DIR = '/home/jenkins/agent/deployments'
        PROJECT_PATH = 'aws/storage/efs-ec2-simple'
    }
    stages {
        stage('Terraform Destroy') {
            steps {
                sh '''
                    cd $DEPLOYMENTS_DIR/$PROJECT_PATH
                    terraform destroy -auto-approve
                '''
            }
        }
    }
}
